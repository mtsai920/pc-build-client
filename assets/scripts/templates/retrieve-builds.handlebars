{{#each builds as |builds|}}
  {{!log builds}}
  <section data-id="{{builds.id}}" class="builds-list-container">

    <div class="builds-list-major">
      <h6>Name:</h6>
      <p>{{builds.name}}</p>

      <h6>Description:</h6>
      <p>{{builds.description}}</p>

      <h6>Budget:</h6>
      <p>{{builds.budget}}</p>
    </div>

    <div class="builds-list-minor">
      <div>
        <button class="btn btn-info update-button">Update</button>
      </div>

    <div>
      <button class="btn btn-danger delete-build">Delete</button>
    </div>

    </div>

  </section>

{{/each}}
